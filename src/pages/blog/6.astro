<style>
  .blog-post {
    padding-top: 0;
  }

  .post-hero {
    position: relative;
    height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.8) 0%, rgba(6, 182, 212, 0.6) 100%);
    z-index: -1;
  }

  .hero-content {
    text-align: center;
    color: white;
    max-width: 800px;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
    font-size: 0.875rem;
  }

  .category {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 500;
  }

  .date, .read-time {
    color: rgba(255, 255, 255, 0.8);
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    margin-bottom: 1.5rem;
    color: white;
    line-height: 1.1;
  }

  .post-subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
    line-height: 1.4;
  }

  .post-content {
    padding: 4rem 0;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .content-wrapper {
    background: white;
    padding: 3rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-lg);
  }

  .lead {
    font-size: 1.25rem;
    color: var(--primary);
    font-weight: 500;
    line-height: 1.6;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid var(--neutral-200);
  }

  .content-wrapper h2 {
    font-size: 2rem;
    color: var(--neutral-900);
    margin: 2.5rem 0 1.5rem 0;
    font-weight: 600;
  }

  .content-wrapper p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--neutral-700);
    margin-bottom: 1.5rem;
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid var(--neutral-200);
    background: var(--neutral-50);
    padding: 2rem;
    border-radius: var(--border-radius);
  }

  .post-footer em {
    color: var(--neutral-600);
    font-style: italic;
  }

  .post-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .post-sidebar > div {
    background: white;
    padding: 2rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
  }

  .post-sidebar h4 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--neutral-900);
  }

  .post-sidebar p {
    color: var(--neutral-600);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .related-posts ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .related-posts li {
    margin-bottom: 0.75rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--neutral-200);
  }

  .related-posts li:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .related-posts a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
  }

  .related-posts a:hover {
    color: var(--primary-dark);
  }

  .contact-cta {
    text-align: center;
  }

  .contact-cta .btn {
    margin-top: 1rem;
  }

  @media (max-width: 968px) {
    .post-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .content-wrapper {
      padding: 2rem;
    }
    
    .hero-content h1 {
      font-size: 2.5rem;
    }
  }

  @media (max-width: 768px) {
    .post-meta {
      flex-direction: column;
      gap: 0.5rem;
      align-items: center;
    }
    
    .content-wrapper {
      padding: 1.5rem;
    }
    
    .content-wrapper h2 {
      font-size: 1.75rem;
    }
    
    .content-wrapper p, .lead {
      font-size: 1rem;
    }
  }
</style>