---
import Layout from '../components/Layout.astro';
---

<Layout
  title="Contact Us - Elite Lifestyle London"
  description="Get in touch with Elite Lifestyle London for premium concierge services. We're here to elevate your lifestyle experience."
>
  <!-- Hero Section -->
  <section class="contact-hero">
    <div class="hero-background">
      <img src="https://images.unsplash.com/photo-1528747045269-390fe33c19f2" alt="Contact us" />
      <div class="hero-overlay"></div>
    </div>
    <div class="container">
      <div class="hero-content fade-in">
        <h1>Contact Elite Lifestyle</h1>
        <p>Ready to experience the pinnacle of luxury lifestyle management?</p>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="contact-section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info fade-in">
          <h2>Get in Touch</h2>
          <p class="contact-lead">
            We're here to understand your unique requirements and create a bespoke service plan 
            that transforms your lifestyle. Contact us today for a confidential consultation.
          </p>
          
          <div class="contact-methods">
            <div class="contact-method">
              <div class="contact-icon">üìû</div>
              <div class="contact-details">
                <h4>Phone</h4>
                <p>+44 20 7123 4567</p>
                <span>Available 24/7</span>
              </div>
            </div>
            
            <div class="contact-method">
              <div class="contact-icon">‚úâÔ∏è</div>
              <div class="contact-details">
                <h4>Email</h4>
                <p>info@elitelifestylelondon.com</p>
                <span>Response within 2 hours</span>
              </div>
            </div>
            
            <div class="contact-method">
              <div class="contact-icon">üìç</div>
              <div class="contact-details">
                <h4>Office</h4>
                <p>Mayfair, London, UK</p>
                <span>By appointment only</span>
              </div>
            </div>
          </div>

          <div class="office-hours">
            <h4>Office Hours</h4>
            <div class="hours-grid">
              <div class="hours-item">
                <span>Monday - Friday</span>
                <span>9:00 AM - 6:00 PM</span>
              </div>
              <div class="hours-item">
                <span>Weekend</span>
                <span>Emergency services only</span>
              </div>
              <div class="hours-item">
                <span>24/7 Concierge</span>
                <span>Always available for clients</span>
              </div>
            </div>
          </div>
        </div>

        <div class="contact-form-container fade-in">
          <form class="contact-form" id="contactForm">
            <h3>Request a Consultation</h3>
            <p>Tell us about your lifestyle needs and we'll create a bespoke solution for you.</p>
            
            <div class="form-group">
              <label for="name">Full Name *</label>
              <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" required>
              </div>
              <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" name="phone">
              </div>
            </div>
            
            <div class="form-group">
              <label for="service">Primary Interest</label>
              <select id="service" name="service">
                <option value="">Select a service</option>
                <option value="personal-concierge">Personal Concierge</option>
                <option value="luxury-transport">Luxury Transportation</option>
                <option value="event-planning">Event Planning</option>
                <option value="property-services">Property Services</option>
                <option value="health-wellness">Health & Wellness</option>
                <option value="comprehensive">Comprehensive Lifestyle Management</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="budget">Monthly Budget Range</label>
              <select id="budget" name="budget">
                <option value="">Select budget range</option>
                <option value="2500-5000">¬£2,500 - ¬£5,000</option>
                <option value="5000-10000">¬£5,000 - ¬£10,000</option>
                <option value="10000-25000">¬£10,000 - ¬£25,000</option>
                <option value="25000+">¬£25,000+</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="message">Tell us about your requirements *</label>
              <textarea id="message" name="message" rows="5" placeholder="Describe your lifestyle needs, preferences, and what you'd like us to help you with..." required></textarea>
            </div>
            
            <div class="form-group checkbox-group">
              <label class="checkbox-label">
                <input type="checkbox" name="privacy" required>
                <span class="checkmark"></span>
                I agree to the privacy policy and terms of service *
              </label>
            </div>
            
            <div class="form-group checkbox-group">
              <label class="checkbox-label">
                <input type="checkbox" name="newsletter">
                <span class="checkmark"></span>
                Subscribe to our exclusive lifestyle newsletter
              </label>
            </div>
            
            <button type="submit" class="btn btn-primary btn-large">
              <span>Send Message</span>
              <div class="btn-loading" style="display: none;">Sending...</div>
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <div class="section-header fade-in">
        <h2>Frequently Asked Questions</h2>
        <p>Common questions about our services and processes</p>
      </div>
      
      <div class="faq-grid">
        <div class="faq-item fade-in">
          <div class="faq-question">
            <h4>What makes Elite Lifestyle different from other concierge services?</h4>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>Our focus on bespoke, ultra-high-end service sets us apart. We don't just fulfill requests; we anticipate needs, provide strategic lifestyle consultation, and maintain the highest levels of discretion and quality. Our team has deep connections across London's most exclusive venues and service providers.</p>
          </div>
        </div>
        
        <div class="faq-item fade-in">
          <div class="faq-question">
            <h4>How quickly can you fulfill requests?</h4>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>For standard requests, we typically respond within 2-4 hours. Emergency or urgent requests are handled immediately through our 24/7 hotline. Our extensive network allows us to fulfill even last-minute requests that others cannot.</p>
          </div>
        </div>
        
        <div class="faq-item fade-in">
          <div class="faq-question">
            <h4>What is your privacy and confidentiality policy?</h4>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>Discretion is paramount to our service. All staff sign comprehensive NDAs, and we maintain strict protocols for handling sensitive information. We never discuss our clients or their activities with third parties under any circumstances.</p>
          </div>
        </div>
        
        <div class="faq-item fade-in">
          <div class="faq-question">
            <h4>Do you provide services outside of London?</h4>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>Yes, our Premium and Elite members enjoy global service coverage. We have partnerships with luxury lifestyle management companies worldwide and can coordinate services anywhere you travel.</p>
          </div>
        </div>
        
        <div class="faq-item fade-in">
          <div class="faq-question">
            <h4>What is the minimum commitment period?</h4>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>We offer flexible arrangements starting from 3-month minimum commitments for our Essential package. Premium and Elite memberships typically start with 6-month commitments to ensure we can properly understand and serve your lifestyle needs.</p>
          </div>
        </div>
        
        <div class="faq-item fade-in">
          <div class="faq-question">
            <h4>How do you ensure quality and consistency?</h4>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>Each client is assigned a dedicated lifestyle manager who learns your preferences in detail. We maintain detailed preference profiles and conduct regular check-ins to ensure continued satisfaction. Our quality assurance team monitors all services to maintain our high standards.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="map-section">
    <div class="container">
      <div class="map-content fade-in">
        <h3>Our Location</h3>
        <p>Located in the heart of Mayfair, one of London's most prestigious districts</p>
        <div class="map-placeholder">
          <div class="map-info">
            <h4>Elite Lifestyle London</h4>
            <p>üìç Mayfair, London, UK<br>
            üìû +44 20 7123 4567<br>
            ‚úâÔ∏è info@elitelifestylelondon.com</p>
            <p><em>Exact address provided upon consultation</em></p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-hero {
    position: relative;
    height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.8) 0%, rgba(6, 182, 212, 0.6) 100%);
    z-index: -1;
  }

  .hero-content {
    text-align: center;
    color: white;
    max-width: 600px;
  }

  .hero-content h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: white;
  }

  .hero-content p {
    font-size: 1.25rem;
    opacity: 0.9;
  }

  .contact-section {
    padding: var(--section-padding);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .contact-info h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  .contact-lead {
    font-size: 1.125rem;
    color: var(--neutral-600);
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }

  .contact-methods {
    margin-bottom: 3rem;
  }

  .contact-method {
    display: flex;
    align-items: flex-start;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: var(--neutral-50);
    border-radius: var(--border-radius);
  }

  .contact-icon {
    font-size: 2rem;
    margin-right: 1rem;
    flex-shrink: 0;
  }

  .contact-details h4 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--neutral-900);
  }

  .contact-details p {
    font-size: 1.125rem;
    color: var(--primary);
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .contact-details span {
    font-size: 0.9rem;
    color: var(--neutral-600);
  }

  .office-hours {
    padding: 2rem;
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    border-radius: var(--border-radius);
    color: white;
  }

  .office-hours h4 {
    color: white;
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
  }

  .hours-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .hours-item:last-child {
    border-bottom: none;
  }

  .contact-form-container {
    background: white;
    padding: 3rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-xl);
  }

  .contact-form h3 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    color: var(--neutral-900);
  }

  .contact-form > p {
    color: var(--neutral-600);
    margin-bottom: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--neutral-700);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 2px solid var(--neutral-200);
    border-radius: var(--border-radius);
    font-size: 1rem;
    transition: var(--transition);
    font-family: var(--font-secondary);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .checkbox-group {
    display: flex;
    align-items: flex-start;
  }

  .checkbox-label {
    display: flex;
    align-items: flex-start;
    cursor: pointer;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .checkbox-label input[type="checkbox"] {
    width: auto;
    margin-right: 0.75rem;
    margin-top: 0.25rem;
  }

  .btn-large {
    width: 100%;
    padding: 1.25rem;
    font-size: 1.125rem;
    position: relative;
  }

  .btn-loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .faq-section {
    padding: var(--section-padding);
    background: var(--neutral-50);
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .section-header p {
    font-size: 1.125rem;
    color: var(--neutral-600);
  }

  .faq-grid {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    background: white;
    border-radius: var(--border-radius);
    margin-bottom: 1rem;
    box-shadow: var(--shadow-sm);
    overflow: hidden;
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    cursor: pointer;
    transition: var(--transition);
  }

  .faq-question:hover {
    background: var(--neutral-50);
  }

  .faq-question h4 {
    margin: 0;
    color: var(--neutral-900);
    font-size: 1.125rem;
  }

  .faq-toggle {
    font-size: 1.5rem;
    color: var(--primary);
    font-weight: bold;
    transition: var(--transition);
  }

  .faq-item.active .faq-toggle {
    transform: rotate(45deg);
  }

  .faq-answer {
    padding: 0 2rem;
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .faq-item.active .faq-answer {
    padding: 0 2rem 1.5rem;
    max-height: 200px;
  }

  .faq-answer p {
    color: var(--neutral-600);
    line-height: 1.6;
    margin: 0;
  }

  .map-section {
    padding: var(--section-padding);
  }

  .map-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .map-content h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .map-content > p {
    color: var(--neutral-600);
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  .map-placeholder {
    background: var(--neutral-100);
    border-radius: var(--border-radius);
    padding: 3rem 2rem;
    border: 2px dashed var(--neutral-300);
  }

  .map-info h4 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--primary);
  }

  .map-info p {
    color: var(--neutral-600);
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .map-info em {
    color: var(--neutral-500);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.5rem;
    }
    
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .contact-form-container {
      padding: 2rem;
    }
    
    .form-row {
      grid-template-columns: 1fr;
    }
    
    .contact-method {
      flex-direction: column;
      text-align: center;
    }
    
    .contact-icon {
      margin-right: 0;
      margin-bottom: 1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // FAQ toggle functionality
    const faqItems = document.querySelectorAll('.faq-item');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      
      question.addEventListener('click', () => {
        const isActive = item.classList.contains('active');
        
        // Close all other FAQ items
        faqItems.forEach(otherItem => {
          otherItem.classList.remove('active');
        });
        
        // Toggle current item
        if (!isActive) {
          item.classList.add('active');
        }
      });
    });
    
    // Form submission
    const contactForm = document.getElementById('contactForm');
    
    contactForm.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const submitBtn = this.querySelector('button[type="submit"]');
      const btnText = submitBtn.querySelector('span');
      const btnLoading = submitBtn.querySelector('.btn-loading');
      
      // Show loading state
      btnText.style.display = 'none';
      btnLoading.style.display = 'block';
      submitBtn.disabled = true;
      
      // Simulate form submission (replace with actual form handling)
      setTimeout(() => {
        alert('Thank you for your inquiry! We will contact you within 2 hours.');
        
        // Reset form
        this.reset();
        
        // Reset button state
        btnText.style.display = 'block';
        btnLoading.style.display = 'none';
        submitBtn.disabled = false;
      }, 2000);
    });
  });
</script>